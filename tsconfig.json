{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "strict": true,
    "outDir": "lib",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "lib": [
    "dom",
    "dom.iterable",
    "es2019"
  ],
  "include": ["src/**/*"],
  "exclude": ["src/dynamicImport.js"]
}
